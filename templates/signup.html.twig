{% extends "layout.html.twig" %}

{% block body_classes %}text-center{% endblock %}

{% block styles %}
    <style type="text/css">
        html,
        body {
            height: 100%;
        }
        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }
        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }
        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            margin: 5px 0;
            font-size: 16px;
        }
        .form-signin .form-control:focus {
            z-index: 2;
        }
    </style>
{% endblock %}

{% block body %}
    <form method="post" class="form-signin" novalidate>
        <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

        {{ parent() }}

        <label for="{{form.email.vars.id}}" class="sr-only">Email address</label>
        {{ form_widget(form.email, {"attr": {"placeholder": "E-mail adress", "autofocus": true, "class": "form-control"}}) }}
        {{ form_errors(form.email) }}
        <label for="{{form.password.vars.id}}" class="sr-only">Password</label>
        {{ form_widget(form.password, {"attr": {"placeholder": "Password", "class": "form-control"}}) }}
        {{ form_errors(form.password) }}

        <hr>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2020</p>

        {{ form_rest(form) }}
    </form>
{% endblock %}
